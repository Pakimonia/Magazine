@model IEnumerable<Magazine.Models.BoughtViewModel>

@{
    ViewBag.Title = "Bayes";
}

<h2>Bayes</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm("Bayes", "Products", FormMethod.Get))
{
<div>
    Product Name: <br>
    <input type="text" id="nameToFind" name="nameToFind" />


    <input type="submit" id="submit" name="submit" />
</div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Addres)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Addres)
            </td>
        </tr>
    }

</table>
